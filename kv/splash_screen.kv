<SplashScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "50dp"
        MDLabel:
            text: "DCS"
            halign: "center"
            theme_text_color: "Primary"
            text_color: 1, 1, 1, 1
            height: self.texture_size[1] + dp(10)
            font_style: "H2"

        MDLabel:
            text: "Welcome to Drive care systems"
            halign: "center"
            theme_text_color: "Secondary"
            height: self.texture_size[1] + dp(5)
            font_style: "Subtitle1"

        Image :
            source: "assets/eeeepit.png"
            size_hint: 0.9, 0.9
            # size: "200dp", "200dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.9, 0.9


        AsyncImage :
            source: "assets/loading.gif"
            # size: "200dp", "200dp"
            anim_delay:0.02
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.3, 0.6
            fit_mode:"fill"


