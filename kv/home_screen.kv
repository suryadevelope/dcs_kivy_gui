<HomeScreen>:
    BoxLayout:
        orientation: 'horizontal'
        spacing: '10dp'
        padding: '10dp'

        # Left Column - Two Camera Feeds
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'

            # Top Camera Feed
            MDCard:
                orientation: 'vertical'
                padding: '10dp'
                elevation: 6
                md_bg_color: app.theme_cls.bg_light
                Image:
                    id: top_camera_feed
                    allow_stretch: True
                    keep_ratio: True

            # Bottom Camera Feed
            MDCard:
                orientation: 'vertical'
                padding: '10dp'
                elevation: 6
                md_bg_color: app.theme_cls.bg_light
                Image:
                    id: bottom_camera_feed
                    allow_stretch: True
                    keep_ratio: True

        # Right Column - Map on Top and Empty Card at Bottom
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'

            # Map Placeholder
            MDCard:
                orientation: 'vertical'
                padding: '10dp'
                elevation: 6
                md_bg_color: app.theme_cls.bg_light
                id: mapview_con
                # MapView:
                #     id: mapview
                #     source: "osm-de"
                #     lat, lon, and zoom will be set by HomeScreen class initialization

            # Empty Card Placeholder
            MDCard:
                orientation: 'vertical'
                padding: '10dp'
                elevation: 6
                md_bg_color: app.theme_cls.bg_light
                Label:
                    text: 'Empty Card'
                    halign: 'center'
                    valign: 'middle'

        # Icon Column
        GridLayout:
            cols: 1
            spacing: '10dp'
            size_hint_x: 0.15
            row_default_height: '50dp'
            row_force_default: True

            MDIconButton:
                icon: 'apps'
                user_font_size: '30sp'
                on_release: root.open_url("https://example.com")

            MDIconButton:
                icon: 'youtube'
                user_font_size: '30sp'
                on_release: root.open_url("https://youtube.com")

            MDIconButton:
                icon: 'whatsapp'
                user_font_size: '30sp'
                on_release: root.open_url("https://web.whatsapp.com")

            MDIconButton:
                icon: 'camera'
                user_font_size: '30sp'
                on_release: root.open_url("https://cameraapp.com")
